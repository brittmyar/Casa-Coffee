  <body class="edit">
    <div class="container">
    <h1>Edit Coffee</h1>
    
    <form class="edit" action="/coffee/<%=coffee._id%>?_method=PUT" method="POST">
        <label class="edit" for="name">Name</label>
        <input class="edit" type="text" name="name" value="<%=coffee.name %>" /><br />
        <label class="edit" for="description">Description</label>
        <input class="edit" type="text" name="description" value="<%=coffee.description %>" /><br />
        <label class="edit" for="ingedients">Ingredients</label>
        <input class="edit" type="text" name="ingredients" value="<%=coffee.ingredients %>" /><br />
        <label class="edit" for="instructions">Instructions</label>
        <input class="edit" type="text" name="instructions" value="<%=coffee.instructions %>" /><br />
        <label class="edit" for="img">Img</label>
        <input class="edit" type="text" name="img" value="<%=coffee.img %>"/><br />
        <button class="btn btn-primary" type="submit">Submit Changes</button>
    </form>
</div>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
